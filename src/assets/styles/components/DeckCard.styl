@import './App.styl'

.DeckCard
  background-color #F9FAFC

.DeckCard__imgContainer
  position relative

.DeckCard__imgContainer figure 
  margin 0

.DeckCard__imgContainer figure img 
  width 100%
  vertical-align top

.DeckCard__tag
  position absolute
  text-align center
  background-color tags-color
  color #ffffff
  padding 7px 20px
  position absolute
  bottom 10%
  left -5px
  text-transform uppercase
  font-family font2
  font-size 14px

.DeckCard__title
  font-family font1
  font-size 24px

.DeckCard__description
  color font-color
  margin-right 10px

.big
  grid-row-start span 3

.small
  grid-row-start span 2 
