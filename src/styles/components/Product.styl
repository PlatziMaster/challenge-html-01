.Product__container
  &--figure
    position relative
  &--image
    margin 0
  &--category
      width 30%
      padding .5em
      background #e2165a
      position absolute
      top 85%
      left -2%
    h4
      margin 0
      color #fff
      text-transform uppercase
      font-weight bold
      font-size 12px
      text-align center
      letter-spacing 1px
  &--details
    h3
      margin-bottom 0
      font-family 'Lato'
      font-size 25px


