@import './styles.styl'
    
footer
  background-color $color-2
  padding 40px 20px 60px
  font-size 14px
  line-height 18px
  color $color-3

  .container
    display grid
    grid-template-columns 1fr
    grid-template-areas "copyright" "form-subscribe" "social" "menu" 

  .copyright
    grid-area copyright
    margin-top 8px
    margin-bottom 20px

    .logo
      margin-bottom 8px

  .form-container
    grid-area form-subscribe
    margin-bottom 24px

    form
      display flex

    input
      height 35px
      width 100%
      max-width 148px
      border none

      &::placeholder
        opacity .5

    button
      height 35px
      width 120px
      border none
      background-color $color-5
      color $color-4
      font-family $font-family-2
      font-size 12px
      line-height 17px
      letter-spacing 1.5px


  .social
    grid-area social
    margin-bottom 16px
    display flex
    align-items center

    span
      margin-right 6px
      white-space nowrap


    img
      margin-left 12px
      margin-right 12px

  .menu-container
    grid-area menu

    #bottom-menu
      max-height 148px
      display flex
      flex-direction: column
      flex-wrap wrap

      li
        margin-top 16px

        a
          color $color-4
          line-height 21px

          &:hover
            color $color-5



@media $sm
  footer
    padding-bottom 50px

    .container
      grid-template-columns 264px 86px 1fr
      grid-template-areas "copyright menu menu" "form-subscribe form-subscribe social"


    .menu-container
      margin-bottom  45px

      #bottom-menu
        max-height 112px


@media $lg
  footer
    padding-left 40px
    padding-right 40px
    padding-bottom 40px

    .container
      grid-template 1fr 35px / 242px 1fr auto
      grid-template-areas "copyright menu social" "copyright menu form-subscribe"

      .copyright
        margin-bottom  0

      .social
        justify-self end

      .menu-container
        margin-bottom  0

        #bottom-menu
          max-height 74px

