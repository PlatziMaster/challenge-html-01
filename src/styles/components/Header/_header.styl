.headerContainer
  width: 100%;
  height: 90px;
  display: grid;
  grid-template-columns: 10% 70% 20%;
  box-shadow: 0px 1px 3px 0px #000;
  align-content: center;
  align-items: center
  background: white
  &-image 
    justify-self: center;
    & img 
      width: 100px
      height 55px
  &_nav
    &-list
      display: grid;
      grid-template-columns: repeat(7, auto);
      justify-items: center;
      width: 80%;
      font-size: .9em;
      & .element
        list-style: none
        color: #545454
  &-menu
    justify-self: right;
    padding-right: 2em;

@media (max-width: 768px)
  .headerContainer  
    grid-template-columns: 50% 50%
    &-image 
      justify-self: left
      padding-left: 10px
    &_nav
      display: none
    &-menu
      display: block


@media (max-width: 480px)
  .headerContainer_nav
    display: none
  
  .headerContainer-menu
    display: block