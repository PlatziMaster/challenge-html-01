.footer 
    box-sizing: border-box
    max-width: 100%
    height 160px
    position: absolute
    bottom: 0
    display: grid
    gap: 30px
    padding: 0px 32px
    grid-template-columns: max-content 1fr max-content  
    &__logo 
        display: grid
        grid-template-rows: max-content max-content
        align-content: center
    &__links
        display: grid
        gap: 16px
        grid-template-columns: repeat(4, 1fr)
        grid-template-rows repeat(2, max-content)
        align-content: center
        li 
            list-style: none
    &__contact
        display: grid
        grid-template-rows: max-content max-content
        align-content: center
        gap: 16px
    &__social-networks
        justify-self: end