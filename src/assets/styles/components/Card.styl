@import './App.styl'

.Card
  background-color #F9FAFC

.Card--imgContainer
  position relative

.Card--imgContainer figure
  margin 0

.Card--imgContainer figure img
  width 100%
  vertical-align top

.Card--tag
  position absolute
  text-align center
  background-color tags-color
  color #ffffff
  padding 7px 20px
  bottom 10%
  left -5px
  text-transform uppercase
  font-family font_oswald
  font-size 14px

.Card--title
  font-family font_lato
  font-size 24px

.Card--description
  color font-color
  margin-right 10px

.big
  grid-row-start span 3

.small
  grid-row-start span 2
