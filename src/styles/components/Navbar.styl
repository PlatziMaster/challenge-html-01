.navbar
    display: flex
    padding: 10px;
    background-color: white
    text-transform: uppercase
    font-family: 'Oswald', sans-serif;
    border-bottom: 1px solid gray
    align-items: center

.navbar__logo
    display: flex
    padding: 0 20px 0 30px
    font-weight: 700
    color: black
    text-decoration: none
    h2
        margin: 0

.navbar__list
    display: flex

#burguer
    margin-left: auto
    margin-right: 30px
    img 
        max-width: 2rem

.navbar__item
    padding: 0 10px 0 10px
    color: #b4b4b4
    text-decoration: none
    transition: .2s
    &:hover
        color: black

.bullet
    height: 10px
    width: 10px
    border-radius: 5px
    align-self: flex-end
    background-color: red