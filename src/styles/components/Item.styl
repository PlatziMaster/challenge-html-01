.item
  width 100%
  display: flex
  flex-direction: column
  justify-content: space-evenly
  &__image
    position relative
    img 
      object-fit: contain
      width: 100%
    span
      width 40%
      height 40px
      padding-top: 12px
      position absolute
      left -5px
      bottom 20px
      background-color: #FF565C
      color: white
      text-align: center
      font-size .8rem
      text-transform: uppercase
  &__title
    margin 10px 0
    width: 80%
    text-transform: capitalize
    font-size 1.2rem
  &__description
    width: 95%
    color: #BBBCBD
    font-size: .85rem
    line-height: 1.5