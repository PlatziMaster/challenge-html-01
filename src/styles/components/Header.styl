header
  grid-area: header
  position relative
  display: grid
  grid-template-areas: "name hamburger"
  align-items: center
  justify-content: space-between
  padding 0

& > h1
  grid-area: name
  justify-self: center
  & span
      color: primary-color

& > .HamburgerMenu
    grid-area: hamburger
    width 50px
  .HamburgerMenu > img
  color: primary-color
  width 100%

& > nav
  position: absolute
  top 0%
  right 0%
  bottom 0%
  width 80vw
  height 100vh
  display: grid
  grid-template-areas: "close" "menu"
  grid-template-rows: minmax(70px, 5%) auto
  background-color: dark-color
  color: light-color
  & > .HamburgerMenu 
    grid-area: close
    padding-right: 5%
    padding-top: 5%
    justify-self: end
    width 10%
    height 100%
  & > ul
    grid-area: menu
    height 100%
    display: flex
    flex-direction: column
    justify-content: baseline
    align-items: center
    font-size: 30px
    & > li
      list-style:none
      padding: 10%
      &:hover
        color: primary-color
        text-decoration: underline light-color

@media (min-width: 960px)
  header
    padding: 0
    grid-template-areas: "name nav hamburger" 
    grid-template-columns: 10% 80% 10%
    width 100vw
    & > .HamburgerMenu
      justify-self: center
      width 30px
    & > nav
      grid-area: nav
      padding: 0% 1%
      width: fit-content;
      height -webkit-fill-available
      position relative
      grid-template-areas: "menu"
      grid-template-columns: 100%
      grid-template-rows: 100%
      justify-content: center;
      align-items: center
      background-color: light-color;
      color: transparentify(dark-color, 0.5);
      & > ul
        flex-direction: row
        justify-content: space-around
        padding: 0%
        margin: 0%
        font-size: 14px
        & > li
          padding: 0% 5px;
