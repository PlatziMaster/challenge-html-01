.level-1, .level-2
  width 100%
  height 100%
  margin-top 30px
  z-index -1
  &__imageFigure
    width 100%
    height 260px
    overflow hidden
    img
      margin 4px
      width 100%
      height 100%
      object-fit cover
    span
      position: relative;
      bottom: 55px;
      left: -10px;
      background: #FF565C;
      color: white;
      padding: 9px 24px;
      font-size: 14px;
      text-transform: uppercase;
  &__title
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin 0
    margin-top 19px
  &__subtitle
    display: -webkit-box;
    -webkit-line-clamp 3
    -webkit-box-orient vertical
    overflow hidden
    margin 11px 0
    line-height 1.7


@media screen and (min-width 767px)
  .level-1
    grid-row-end span 9
    &__imageFigure
      height 200px
  .level-2
    grid-row-end span 12
    &__imageFigure
      height 400px

