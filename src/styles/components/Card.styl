.card
    font-family: 'Lato', sans-serif;
    place-self: center
    
.card img
    width: 100%
    height: auto


.card__area
    font-family: 'Oswald', sans-serif
    width: 130px
    position: relative
    background-color: #ff565b
    padding: 5px
    top: -60px
    left: -5px
    display: flex;
    justify-content: center
    

.card__area h2
    text-align: center
    letter-spacing: 1px
    text-transform: uppercase
    font-size: 14px
    

.card > h2
    margin-top: -25px
    font-size: 20px
    text-align: left
    font-weight: 600
    

.card > p
    margin-top: 10px
    text-align: justify;
