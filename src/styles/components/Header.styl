*
  margin: 0px;
  padding: 0px;
  list-style: none;
  text-decoration: none;

header nav
  width: 100%
  height 70px
  border-bottom 1px solid #EAEAEB
  text-align right
  line-height 70px
  display flex
  justify-content space-between
  position: fixed;
  background-color: #FFFFFF
  z-index 1000

header nav button
  background-color:#FFFFFF
  padding: 20px

header nav menu
  display flex
  margin 0 30px 0 0
  color #d2d2d4
  cursor: pointer

header .burger
  display: none

header nav label
  color #1e1f24
  margin-right 10px

menu li
  color: #FFFFFF
  clear right
  padding 0 20px
  text-transform uppercase

menu li:hover
  a
    color: #FFFFFF
  background-color: rgb(210, 210, 212, .3)
  color: #FFFFFF

a:visited 
  color: #d2d2d4

@media screen and (max-width: 1000px)
  .show
    display: block

  .hide
    display: none
  
  header nav menu
    flex-direction: column
    position: fixed
    text-align right 
    background-color: rgb(255,86,91,0.49)
    left: 68vw;
    width: 30vw;
    height: 100vh;
    top: 70px;
    color: #FFFFFF
  header .burger
    display: block

  menu li:hover
    a
      color: #FFFFFF
    background-color: #f36f73
    color: #FFFFFF
    
@media screen and (max-width: 850px)
  header nav menu
    background-color: rgb(255,86,91,0.49)
    left: 0vw;
    width: 100vw;
    text-align: center
    color: #FFFFFF
  
  header .burger
    display: block

