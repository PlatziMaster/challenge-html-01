@import url('https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Oswald:wght@500&display=swap')


.Footer
	height 180px
	display: flex
	padding: 30px
	font-size: 21px
	color: #FFFFFF
	font-family: 'Oswald'
	justify-content: center
	background-color: #1D1F24
	h2
		color: #494B4F
		font-size: 24px
		font-family: 'Oswald'
		line-height: 30px
		font-weight: 500
	span
		color: #FF565C
	p
		color: #F9FAFC
		font-family: 'Lato'
		font-size: 14px
		line-height: 18px
	&__layout
		display: grid
		width: 100%
		grid-template-columns: repeat(9, 1fr)
		grid-template-rows: repeat(2, 50px)
		gap: 1px
		
		@media screen and (max-width 500px)
			display: grid
			grid-template-columns: 1fr

.Deck
	grid-area: 1 / 1 / 2 / 3
  
.deck__year
	grid-area: 2 / 1 / 3 / 3
  
.tech
	grid-area: 1 / 3 / 2 / 4
  
.ideas
	grid-area: 2 / 3 / 3 / 4
  
.leader
	grid-area: 1 / 4 / 2 / 5
  
.video
	grid-area: 2 / 4 / 3 / 5
  
.new
	grid-area: 1 / 5 / 2 / 6
  
.finance
	grid-area: 2 / 5 / 3 / 6
  
.enter
	grid-area: 1 / 6 / 2 / 7
  
.input
	display: inline-block
	grid-area: 2 / 8 / 3 / 10
	input
		height: 30px
  
.follow
	grid-area: 1 / 8 / 2 / 9
  
.button
	color: #FFFFFF
	height: 35px
	background: #FF565C
	border: none
	display: inline-block
	grid-area: 2 / 10 / 3 / 11
  
.social
	grid-area: 1 / 9 / 2 / 11

@media screen and (max-width 800px)
	.Footer__layout
			display: grid
			grid-template-columns: repeat(2, 1fr)