.header
  display: grid
  grid-template: auto auto / auto 1fr auto
  padding: 19px padLR-bodyGen--minTablet 21px padLR-bodyGen--minTablet
  border-bottom: 1px solid colorGray--primary
  background-color: bgColor--secondary
  &__menu-icon
    grid-column-start: 3
    @extend .resetButtonStyles
    &:hover
      cursor: pointer
      background-color: rgba(colorDark--primary, 20%)
  &__nav
    grid-row-start: 2
    grid-column: 1 / 3
    @extend .resetButtonStyles
    &--hidden
      display: none
    &--visible
      display: block
  @media screen and (min-width: mediaQuery__breakP--tablet)
    padding-left: 40px
    padding-right: 30px
  @media screen and (min-width: mediaQuery__breakP--desktop)
    padding-left: 50px
    padding-right: 40px

@media screen and (min-width: mediaQuery__breakP--desktop)
  .header
    grid-template: 1fr / auto 805px 1fr auto
    column-gap: 58px
    &__menu-icon
      grid-column-start: 4
    &__nav
      grid-column-start: 2
      grid-row-start: 1
      &--hidden
        display: block
      & .nav
        display: flex
        flex-direction: row
