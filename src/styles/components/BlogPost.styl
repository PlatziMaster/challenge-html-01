@import "Default.styl"

.main
  display: grid
  font-family: Family2
  width: 100vw
  background-color: BackgroundColor
  justify-content: center
  overflow hidden
  .container
    width: 90vw
    display: grid
    grid-template-columns: 90vw
    justify-content: center
    grid-row-gap:  20px
    margin-top: 4%
    .post-1 
      grid-row-end: span 1
      &__container--category
        font-family: Family
        position: relative
        display: flex
        align-items: center
        justify-content: center
        bottom: 4rem
        right 2%
        background-color: PrimaryColor 
        color LigthColor
        width: 50%
        height 35%
      &__container--category:hover
        background-color: ColorHover
      &__container--category a
        color LightColor 
      & img
        width: 100%
        height 100%
    .post-2
      grid-row-end: span 1
      &__container--category
        position: relative
        display: flex
        align-items: center
        justify-content: center
        bottom: 3rem
        right 2%
        background-color: PrimaryColor 
        color LigthColor
        width: 50%
        height 35%
      &__container--category:hover
        background-color: ColorHover
      &__container--category a
        color LightColor 
      & img 
        width: 100%
        height 100%

/* Hovers */


@media screen and (min-width 650px)
  .main
    width: 100vw
    .container
      grid-template-columns: repeat(2, 45vw)
      grid-column-gap: 2em
      .post-1
        grid-row span 2
        &__description
          width auto 
      .post-2
        grid-row span 1

@media screen and (min-width 1023px)
  .main
    width: 100vw
    .container
      grid-template-columns: repeat(3, 30vw)
      grid-column-gap: 3em
      .post-1
        grid-row span 3
        &__description
          width: auto
      .post-2
        grid-row span 2
