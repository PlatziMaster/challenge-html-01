header
  grid-area: header
  position relative
  display: grid
  grid-template-areas: "name hamburger"
  align-items: center
  justify-content: space-between
  padding 0 5%

& > h1
  grid-area: name
  & span
      color: primary-color

& > .HamburgerMenu
    grid-area: hamburger
    width 50px
  & > img
  color: primary-color
  width 100%

& > nav
  position: absolute
  top 0%
  right 0%
  bottom 0%
  width 80vw
  height 100vh
  display: grid
  grid-template-areas: "close" "menu"
  grid-template-rows: minmax(70px, 5%) auto
  background-color: dark-color
  color: light-color
  & > .HamburgerMenu 
    grid-area: close
    padding-right: 5%
    padding-top: 5%
    justify-self: end
    width 10%
    height 100%
  & > ul
    grid-area: menu
    height 100%
    display: flex
    flex-direction: column
    justify-content: baseline
    align-items: center
    font-size: 30px
    & > li
      list-style:none
      padding: 10%
      &:hover
        color: primary-color
        text-decoration: underline light-color

