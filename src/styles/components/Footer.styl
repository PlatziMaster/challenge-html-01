.footer 
    box-sizing: border-box
    min-width: 100%
    height 160px
    position: absolute
    bottom: 0
    background-color:#1D1F24
    color: white
    display: grid
    gap: 30px
    padding: 0px 32px
    grid-template-columns: max-content 1fr max-content  
    font-size: 14px
    &__logo 
        display: grid
        grid-template-rows: max-content max-content
        align-content: center
        row-gap: 8px
    &__links
        display: grid
        gap: 16px
        grid-template-columns: repeat(4, 1fr)
        grid-template-rows: repeat(2, max-content)
        align-content: center
        li 
            list-style: none
            a   
                text-decoration: none
                font-family: 'Oswald', sans-serif
                color: white
                opacity: 0.6
                &:hover 
                    opacity: 1
                    text-decoration: underline
    &__contact
        display: grid
        grid-template-rows: max-content max-content
        align-content: center
        gap: 16px

        &-email, &-send-button 
            box-sizing: border-box
            height : 35px
            margin: 0px

        &-email 
            padding-left: 8px 

        &-send-button 
            background: #FF565C
            color: white
            border: 0
            font-family: 'Oswald', sans-serif
            font-size: 12px

    &__contact-form
        background: red
        height 35px 
        display: grid
        grid-template-columns: max-content max-content   
    
    &__social-networks
        justify-self: end
        display: grid
        column-gap: 16px
        grid-template-columns: repeat(5, max-content)
        color: #707070
        a 
            text-decoration: none
            color: #707070
            font-size: 16px
        &--instagram:hover
            color: #5851DB
            transform: scale(1.5)
            transition: 1s
         &--pinterest:hover
            color: #BD081C
            transform: scale(1.5)
            transition: 1s
         &--twitter:hover
            color: #1DA1F2
            transform: scale(1.5)
            transition: 1s
         &--facebook:hover
            color: #4267B2
            transform: scale(1.5)
            transition: 1s