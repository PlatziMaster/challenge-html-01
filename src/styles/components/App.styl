*
  padding 0
  margin 0
  box-sizing border-box 

body
  background-color white
  height auto
  
.container
  background  #f9fafc
  column-count 3
  padding: 20px
  margin: 20px

@media (max-width: 767px) { 
  .container {
    column-count 2
  }
}

@media (max-width: 480px) {
  .container {
    column-count 1
  }
}