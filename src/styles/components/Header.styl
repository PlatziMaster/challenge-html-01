.header
    background-color #ffffff
    border-bottom: 1px solid #e0e0e0
    width: 100%
    height: 80px
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
    font-family: 'Oswald', sans-serif

.brand
    width: 100px
    padding: 0 40px
    height: 40px
    
.header__navbar
    display: flex
    flex-direction: row

.header__navbar--list
    display: flex
    flex-direction: row

.header__navbar li
    list-style: none
    padding: 10px

.header__navbar li a
    padding: inherit
    color: #a8a9aa
    text-decoration: none

.header__navbar li a:hover
    color: #1d1f24

.header__button
    display: none
    padding: 10px
    margin-right: 40px
    border: none
    background-color #fff

.header__button:hover
    cursor: pointer
    background-color #e0e0e0


@media (max-width: 768px)
    .header__navbar--list
        display: none

    .header__button
        display: block

@media (max-width: 480px)
    .header__navbar--list
        display: none
    
    .header__button
        display: block