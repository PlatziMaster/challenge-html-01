.footer
  display: grid
  grid-template-rows: 1fr 1fr auto
  row-gap: 20px
  padding: 40px 20px 60px 20px
  color: rgba(fontColor--alternative, 70%)
  background-color: bgColor--tertiary
  @media screen and (min-width: mediaQuery__breakP--tablet)
    padding-left: 40px
    padding-right: 30px
    padding-bottom: 50px
    grid-template: 1fr auto / 32vw auto
    row-gap: 50px
  @media screen and (min-width: mediaQuery__breakP--desktop)
    padding-left: 50px
    padding-right: 40px
    grid-template: repeat(1, 1fr) / 1fr 3fr auto

.footer__copyright .copyright__logo
  color: rgba(colorLight--secondary, 20%)

.footer__social-media .email-subscribe__input
  border: none
  background-color: fontColor--alternative

@media screen and (min-width: mediaQuery__breakP--tablet)
  .footer__social-media
    grid-row-start: 2
    grid-column: 1 / 3
    & .followUs
      flex-direction: row
      justify-content: flex-start
      &__social-media
        margin-left: 9.0em

@media screen and (min-width: mediaQuery__breakP--desktop)
  .footer__social-media
    grid-row-start: 1
    grid-column-start: 3
    & .followUs
      flex-direction: column-reverse
      justify-content: space-between

.footer__nav
  @media screen and (min-width: mediaQuery__breakP--tablet)
    grid-row-start: 1
    grid-column-start: 2

.footer__nav .nav
  display: grid
  grid-template-columns: repeat(2, auto)
  row-gap: 20px
  margin-top: 10px
  &__item
    color: colorLight--primary
    text-align: left
    &:hover
      color: rgba(colorLight--secondary, 70%)
  @media screen and (min-width: mediaQuery__breakP--tablet)
    grid-template-columns: repeat(3, auto)
    row-gap: 12px
    column-gap: auto
    margin-top: 0px
  @media screen and (min-width: mediaQuery__breakP--desktop)
    grid-template-columns: repeat(4, auto)
