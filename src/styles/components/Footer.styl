.Footer
  width 100%
  color #fff
  padding 2% 0
  background #1f1e1e
  display grid
  grid-template-columns 16% 55% 25%
  justify-content center
  p
    margin .5em 0 0 0
    color #b1b1b1
    font-family Lato
    font-size 14px
  &__info
    h1
      margin 0
      color gray
      span
        color #e81e61
  &__nav
      display grid
      grid-template-rows 50% 50%
      grid-template-columns repeat(4, 1fr)
      a
        color #c5c5c5
        font-size 12px
        font-weight bold
        text-decoration none
        text-transform uppercase
        letter-spacing 2px
  &__social
    display grid
    grid-template-rows 1fr 1fr
    &--icons
      display flex
      align-items center
      justify-content flex-end
      .icon
        margin 0 .8em
        color #b1b1b1
        font-size 16px
  &__mail
    display grid
    grid-template-columns 70% 30%
    input 
      padding: 4px 0px 4px 10px;
      border none
      background #fff
    button 
      color #fff
      background #e81e61
      border none
      font-weight bold
      font-size 12px
      letter-spacing 1px

@media screen and (max-width: 768px)
  .Footer
    grid-template-columns 40% 55%
    &__social
      grid-template-columns 100% 55%
      &--icons
        grid-column 2/3
        grid-row 1/3
    &__mail 
        grid-row 1/3

@media screen and (max-width: 600px) 
  .Footer
    grid-template-columns 1fr
    grid-gap 10px
    &__social
      grid-row 2/3
      grid-template-columns 1fr
      &--icons
        grid-row 2
        justify-content left
    &__mail
      grid-template-columns 30% 15%

