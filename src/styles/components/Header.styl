header
    display grid;
    grid-template-areas "logo btnMenu" "nav nav"
    align-items center
    margin: auto
    background-color: white
    box-shadow: 0 0 2px rgba(0,0,0, 0.3)
    padding: 16px
    .header-logo
        grid-area logo
        p
            font-size 22px
            font-weight bold
            span
                color #FF565C
    input
        display none
    input[type="checkbox"]:checked + .header-nav
        height 191px
        padding-top 16px 
    .header-nav
        display grid
        grid-area nav
        grid-template-rows: repeat(7, 25px)
        height 0px
        overflow hidden
        transition all 0.25s
        a
            display grid
            align-items center
            text-transform uppercase
            text-decoration none
            color #D2D2D4
    .header-button
        display grid
        justify-items flex-end
        grid-area btnMenu
        label img
            display grid
            align-items: flex-end
            width: 25px
            height 25px

@media screen and (min-width 1100px) 
    header
        grid-template-areas unset
        grid-template-columns minmax(70px, 70px) repeat(9, 1fr)
        grid-template-rows 1fr
        padding 28px
        .header-logo
            grid-column 1 /2
        .header-nav
            grid-column: 2 / 8
            grid-template-columns: repeat(7, auto)
            grid-template-rows: 1fr
            height auto
            a
                font-size: 14px
        input[type="checkbox"]:checked + .header-nav
            height unset 
            padding-top 0
        .header-button
            grid-column 10 / 11
