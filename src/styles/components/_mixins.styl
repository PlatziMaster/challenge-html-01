
clearfix() {
    &:before, &:after {
        display: table;
        content: ' ';
    }

    &:after {
        clear: both;
    }
}

container-fixed($gutter = 0) {
    padding-right: ceil(($gutter / 2));
    padding-left: floor(($gutter / 2));
    margin-right: auto;
    margin-left: auto;
    clearfix();
}