.posts.container
  display: block;
  @media (min-width: 516px)
    display grid;
    grid-gap 1.5em 1em;
    grid-template-columns repeat(auto-fill, minmax(250px, 1fr));
    grid-auto-rows 80px;

    .card:nth-child(even)
      grid-row-end span 5

    .card:nth-child(odd) .card--content-img
      height 120px;
      object-fit cover

    .card:nth-child(even) .card--content-img
      height 280px;
      object-fit cover

    .card:nth-child(odd)
      grid-row-end span 3
