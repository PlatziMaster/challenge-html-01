.footer
    width: 100%
    height: 100%
    background-color #1e1f24
    display: grid
    grid-template-columns: 30% 40% 30%
    font-family: 'Lato', sans-serif;
    

.footer__brand 
    padding: 20px
    place-self: center
    color: #bbbcbe

.footer__brand p
    font-size: 13px
    padding-left: 5px

.footer__navbar
    font-family: 'Oswald', sans-serif
    display: flex;
    justify-content: flex-start
    align-items: center;

    
.footer__navbar--list
    display: flex
    flex-direction: row
    flex-wrap: wrap
    box-sizing: border-box

.footer__navbar--list li
    padding: 10px
    list-style: none

.footer__navbar--list li a
    text-decoration: none
    color: #ffffff

.footer__navbar--list li a:hover
    color: #a8a9aa

.footer__subscrite
    width 80%
    color white
    place-self: center

.footer__subscrite p
    font-size: 13px
    color: #bbbcbe
    padding: 10px 0

.footer__subscrite p i
    padding: 0 5px
    font-size: 15px
    cursor: pointer

.footer__subscrite--form
    width 100%

.footer__subscrite--form input[type=email]
    padding: 10px
    outline: none
    border: none
    font-family: 'Oswald', sans-serif
    width 50%

.footer__subscrite--form button
    background-color #ff565b
    padding: 10px
    color: #fff
    font-family: 'Oswald', sans-serif
    outline: none
    border: none

@media (max-width: 768px)
    .footer
        grid-template-columns: 30% 70%

    .footer__subscrite
        grid-column: 1/3
        display: flex
        flex-direction: row-reverse
        justify-content: center
        align-items: center;


@media (max-width: 480px)
    .footer
        grid-template-columns: auto
        grid-template-rows: 30% 30% auto
        box-sizing: border-box;

    .footer__brand
        grid-row: 1/2
        place-self: center
        padding: 50px 0 30px 0
        
    .footer__subscrite
        grid-row: 2/3
        place-self: center
        padding-top: 20px


    .footer__navbar
        grid-row: 3/4
        place-self: center
        padding: 0px 50px 0px 50px
        