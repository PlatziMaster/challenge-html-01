.card
    margin: 20px 0
    min-height: 300px
    max-height: auto
    width: 300px
    font-family: 'Lato', sans-serif;

.card img
    width: 100%
    height: auto


.card__area
    font-family: 'Oswald', sans-serif
    width: 130px
    position: relative
    background-color: #ff565b
    padding: 5px
    top: -60px
    left: -5px
    display: flex;
    justify-content: center
    

.card__area h2
    text-align: center
    letter-spacing: 1px
    text-transform: uppercase
    font-size: 14px

.card > h2
    margin-top: -25px
    font-size: 25px
    text-align: left
.card > p
    margin-top: 10px