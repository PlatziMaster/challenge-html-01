main
  margin-top 40px
  padding-left 1rem
  display: grid
  grid-template-columns: 1fr 1fr 1fr
  gap: 0 3rem
  h3
    width: 75%
    text-transform: capitalize
  p
    padding-top 10px
    color: gray
    font-size: 14px
  @media screen and (max-width: 768px)
    grid-template-columns: 1fr 1fr
    @media screen and (max-width: 375px)
      grid-template-columns: 1fr 
      padding-right 1rem
      p
        margin-bottom 20px

.item
  height auto

.image
  width 100%

.image__category
  background-color: #ff555b;
  bottom: 50px;
  color: white;
  left: -5px;
  padding: 10px 25px;
  position: relative;
  text-transform: uppercase;