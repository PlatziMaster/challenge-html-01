.Main
  margin-top:10px;
  display: grid;
  grid-template-columns: repeat(auto-fill, 340px);
  grid-gap: 5px;
  justify-content: center;
  align-content: center;

  &-item
    border-radius: 5px;
    padding: 10px;
    background: #f2f2f2;
    img
      max-width: 100%
  
    &__category-item
      padding: 10px;
      background-color: red;
      color: #ffffff
      background-color:#FF565B
      font-size: 12px;
    &__title-item
      color: #000000
      font-size: 18px;
    &__detail-item
      padding: 2px;
      color: #999999
      font-size: 14px;

  &-level1
    grid-row-end: span 3;
  &-level2
    grid-row-end: span 2;
  &-level3
    grid-row-end: span 1;
  
