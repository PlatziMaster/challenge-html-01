.Footer
  width: 100%
  padding: 2em
  font-weight: bold
  display: grid
  align-items: center
  grid-template-columns: auto auto auto
  background: #1f1f24

  &__logo
    color #45464a
    display: flex
    align-items: center
    justify-content: flex-start
    font-size: 1.5em
    p 
     color red
  &__copyright 
    font-size: .8em
    color #8a8b8e

    
  &__navbar
    font-size: .9em
    
    color #fefefe
    text-transform: uppercase
    ul 

      display: grid
      grid-template-rows: 1fr 1fr
      grid-gap: 10px

      grid-template-columns: repeat(4, auto)
      grid-template-areas: "technology leadership news entertainment"\
                           "ideas video finance null"
      .technology
        grid-area: technology
      .leadership
        grid-area: leadership
      li 
        padding: 0 10%
        transition: .3s
        cursor pointer
        letter-spacing: .1em
      :hover
        color #e7413e
  
  
  
  .Footer-followContainer
    display: flex
    flex-direction: column
    align-items: flex-end
  &__follow
    justify-self: flex-end
    width: 60%
    margin-bottom: .5em
    color: #8a8b8e
    display: flex
    align-items: center
    justify-content: space-around
    label 
      cursor pointer
  .submit
    padding: .5em;
    background: #fa555a;
    border: none;
    outline: none;
    height: 100%;
    color: #fefefe;
    font-weight: bold;
    letter-spacing: .1em;
    cursor pointer
  .input
    padding: .5em;
    border: none;
    outline: none;
  @media screen and (max-width: 1086px) 
    grid-template-columns: auto auto
    grid-template-rows: 1fr 1fr
    grid-template-areas: "copyright navbar"\
                         "followContainer followContainer"
    &__logoContainer
      grid-area: copyright                         
    &__navbar
      grid-area: navbar
    &__followContainer
      grid-area: followContainer
      display: flex
      align-items: center
      justify-content: flex-end
    &__navbar
      ul 

        display: grid
        grid-template-rows: 1fr 1fr
        grid-gap: 10px

        grid-template-columns: repeat(3, auto)
        grid-template-areas: "technology leadership news "\
                            "ideas video finance "\
                            "entertainment null null"
        .technology
          grid-area: technology
        .entertainment
          grid-area: entertainment
    &__followContainer
      display: flex
      flex-direction: row-reverse
      align-items: flex-end
      .subscribeContaineer
        display: flex
  @media screen and (max-width: 672px) 
    grid-template-columns: auto 
    grid-template-rows: repeat(3, auto)
    grid-template-areas: "copyright "\
                         "followContainer"\
                         "navbar"
    &__followContainer
      margin: 2em 0
      display: flex
      flex-direction: column
      align-items: flex-start
    &__navbar
      ul 
        display: grid
        grid-template-rows: auto auto
        grid-gap: 10px

        grid-template-columns: repeat(2, auto)
        grid-template-areas: "technology video   "\
                             "ideas news "\
                             "entertainment finance"\
                             "leadership null"
        li 
          padding: .5em
        .technology
          grid-area: technology
        .entertainment
          grid-area: entertainment
  @media screen and (max-width: 423px)
    padding: .5em


    
   
      
