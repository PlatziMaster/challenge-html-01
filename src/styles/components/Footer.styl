@media screen and (min-width 320px)
    .Footer
        color gray;
        background #1d1f24
        display flex
        flex-flow column
        padding-left: 2vw
        .Footer__spacer
            height 2vh
        .copyleft__form
            height: 3vh
            display: flex;
            align-items: end;
            .form__email
                border 0px
                height 94%
                padding-left: 2vw
            .form__buttom
                height 100%
                border 0px
                background #FF565C
                color white
        .copyleft__social
            display: flex
            .social__iconsContainer
                width: 10vw;
                display: flex;
                justify-content: space-around;






