@import '../lib/vars.styl'

.header__container
    display flex
    font-family oswald-font
    align-items center
    padding 10px 5vw
    margin-bottom 30px

    svg
        cursor pointer
        min-width 30px
        z-index 10

.header__section
    color light-font
    font-size 12px
    text-decoration none
    text-transform uppercase
    margin 0 30px
    letter-spacing 1px

    &:hover
        color dark-font

    @media (max-width: desktop)
        display none

.header__flex-grow
    flex 1

.header__sections-container--mobile
    display flex
    position fixed
    right 0
    left 0
    top 0
    bottom 0
    background-color transparentify(black, .8)
    z-index 5
    justify-content center
    align-items center
    flex-direction column

    .header__sections-container__section--mobile
        @extend .header__section
        display block
        text-align center
        font-size 1.5em
        &:hover
            color light-font

    @media (min-width desktop)
        display none