.footer
    display: grid
    grid-template-columns: 15% 15% 15% 15% 15% 25%
    grid-auto-rows: 100%
    background-color: #1e1f24
    color: white

.footer__item, .footer__brand
    padding: 25px
    font-size: 16px
    font-family: 'Oswald', sans-serif;
    text-transform: uppercase

.footer__logo
    font-family: 'Lato', sans-serif;
    display: flex
    h2
        margin: 0


.footer__form 
    display: flex
    input
        padding: 10px
        border: 0
    button 
        background-color: #f9565b
        border: 0
        width: 90px
        padding: 10px
        color: white
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase

.mobile__item
    display: none

.footer__icons
    display: flex
    align-items: center
    p, i 
        padding-right: 8px

.footer__icons i 
    font-size: 1.5rem