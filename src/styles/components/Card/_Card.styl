.card
  font-family: 'Lato', sans-serif;
  place-self: center
  & img
    width: 100%
    height: auto
  &_area
    font-family: 'Oswald', sans-serif
    width: 130px
    position: relative
    background-color: #ff565b
    padding: 5px
    top: -60px
    left: -5px
    display: flex;
    justify-content: center
    &-title
      text-align: center
      letter-spacing: 1px
      text-transform: uppercase
      font-size: 14px
      color: white
