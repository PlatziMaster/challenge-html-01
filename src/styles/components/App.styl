@import './styles.styl'
@import url('https://fonts.googleapis.com/css?family=Lato|Oswald:400,500&display=swap')

// 00. Layout
*
  margin: 0
  padding: 0
  list-style: none
  text-decoration: none


body
  background-color: $bg-color
  min-height: 100vh
  font-family $font-family

input
  font-family $font-family
  font-size  14px
  padding 0 16px

#app
  height 100vh
  display: flex
  flex-direction: column
  justify-content space-between

// 00.Menu
.menu-container
  flex-grow 3
  font-family $font-family-2
  font-size 14px
  font-weight 400
  letter-spacing 2px
  padding-bottom 4px

  li
    cursor pointer

// 00. Header
header
  background-color: $color-4
  border-bottom 1px solid $border-color
  padding: 0 20px

  nav
    height: 70px
    display: flex
    align-items: center
    justify-content: space-between

    .logo
      margin-right 40px

    #top-menu
      display none

      li
        margin-right 60px

        a
          color $color-1

          &:hover
            color $color-2


    .toggle
      
      label
        cursor pointer

  #toggle-checkbox
    display none

    &:checked
      & + #top-menu
        display block

@media $sm
  header
    nav
      height: 90px

@media $lg
  header
    padding-left: 40px
    padding-right: 40px
    nav
      .logo
        margin-right: 60px
  
      .toogle
        margin-left: 60px
    
@media $xl
  header
    nav
      .menu-container
        #top-menu
          display: flex


// 00. Footer
footer
  background-color $color-2
  padding 40px 20px 60px
  font-size 14px
  line-height 18px
  color $color-3

  .container
    display grid
    grid-template-columns 1fr
    grid-template-areas "copyright" "form-subscribe" "social" "menu" 

  .copyright
    grid-area copyright
    margin-top 8px
    margin-bottom 20px

    .logo
      margin-bottom 8px

  .form-container
    grid-area form-subscribe
    margin-bottom 24px

    form
      display flex

    input
      height 35px
      width 100%
      max-width 148px
      border none

      &::placeholder
        opacity .5

    button
      height 35px
      width 120px
      border none
      background-color $color-5
      color $color-4
      font-family $font-family-2
      font-size 12px
      line-height 17px
      letter-spacing 1.5px


  .social
    grid-area social
    margin-bottom 16px
    display flex
    align-items center

    span
      margin-right 6px
      white-space nowrap


    img
      margin-left 12px
      margin-right 12px

  .menu-container
    grid-area menu

    #bottom-menu
      max-height 148px
      display flex
      flex-direction: column
      flex-wrap wrap

      li
        margin-top 16px

        a
          color $color-4
          line-height 21px

          &:hover
            color $color-5



@media $sm
  footer
    padding-bottom 50px

    .container
      grid-template-columns 264px 86px 1fr
      grid-template-areas "copyright menu menu" "form-subscribe form-subscribe social"


    .menu-container
      margin-bottom  45px

      #bottom-menu
        max-height 112px


@media $lg
  footer
    padding-left 40px
    padding-right 40px
    padding-bottom 40px

    .container
      grid-template 1fr 35px / 242px 1fr auto
      grid-template-areas "copyright menu social" "copyright menu form-subscribe"

      .copyright
        margin-bottom  0

      .social
        justify-self end

      .menu-container
        margin-bottom  0

        #bottom-menu
          max-height 74px

// 00. Main
main
  margin-bottom 30px
  padding: 0 10px

  .container
    columns 1
    column-gap 0

    .card
      padding 30px 10px 20px
      break-inside avoid

      .image
        position relative
        margin-bottom 19px

        .category
          position absolute
          left 0
          bottom 0
          margin-left -4px
          margin-bottom 20px
          padding: 8px 22px 8px 25px 
          background-color $color-5
          color $color-4
          font-family $font-family-2
          font-size 14px
          line-height 21px
          letter-spacing 1.75px
          text-transform uppercase
          text-align center
      
      h2 
        font-size 26px
        line-height 30px
        letter-spacing -0.22px
        color $color-2
        margin-bottom 11px

      p 
        font-size 18px
        line-height 28px
        color $color-2
        opacity .7
        width 90%

@media $md
  main
    .container
      columns 2

@media $lg
  main
    padding: 0 30px 

@media $xl
  main
    .container
      columns 3
